    "immutable": "^3.8.1",
    "lodash.isequal": "^4.4.0",
    "lodash.throttle": "^4.1.1",
    "react": "~15.4.1",
    "react-native": "^0.42.0",
    "react-native-device-info": "^0.10.1",
    "react-native-drawer": "^2.3.0",

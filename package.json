{
  "name": "ZulipMobile",
  "version": "1.0.0",
  "private": true,
  "//": "comment: use `prettier` command as `npm run prettier -- <filename>`",
  "scripts": {
    "start": "react-native start",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -scheme ZulipMobile archivexcodebuild -scheme ZulipMobile archive",
    "reinstall": "rm -rf node_modules; yarn cache clean; yarn install",
    "ios": "react-native run-ios",
    "ios-min": "react-native run-ios --simulator 'iPhone 5s'",
    "ios-mid": "react-native run-ios --simulator 'iPhone 8 Plus'",
    "ios-max": "react-native run-ios --simulator 'iPhone X'",
    "ipad": "react-native run-ios --simulator 'iPad Air'",
    "ios-device": "react-native run-ios --device",
    "android-min": "react-native run-android",
    "android-max": "react-native run-android",
    "android-release": "react-native run-android --variant=release",
    "prettier": "prettier --write `find src -name \"*.js\"`",
    "test:lint": "eslint src/",
    "test:flow": "flow",
    "test:flow-coverage": "flow-coverage-report -i 'src/**/*.js' -x '**/__tests__/**' -t html",
    "test:unit": "jest src/",
    "test:e2e": "detox test --configuration ios.sim.release --cleanup",
    "test:coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test": "npm run test:lint && npm run test:coveralls && npm run test:flow",
    "build:ios-release": "detox build --configuration ios.sim.release",
    "update-snapshots": "npm run test:unit -- -u"
  },
  "dependencies": {
    "@expo/react-native-action-sheet": "1.0.1",
    "@remobile/react-native-toast": "^1.0.7",
    "base-64": "^0.1.0",
    "blueimp-md5": "^2.10.0",
    "buffer": "^5.0.8",
    "color": "^2.0.1",
    "date-fns": "^1.29.0",
    "entities": "^1.1.1",
    "events": "^1.1.1",
    "htmlparser2": "^3.9.2",
    "lodash.isequal": "^4.4.0",
    "lodash.throttle": "^4.1.1",
    "lodash.uniqby": "^4.4.0",
    "react": "16.0.0",
    "react-intl": "^2.4.0",
    "react-native": "^0.51.0",
    "react-native-device-info": "^0.13.0",
    "react-native-fetch-blob": "^0.10.8",
    "react-native-image-picker": "^0.26.7",
    "react-native-notifications": "^1.1.17",
    "react-native-orientation": "^3.1.3",
    "react-native-photo-view": "^1.5.2",
    "react-native-progress": "^3.4.0",
    "react-native-safari-view": "2.0.0",
    "react-native-safe-area": "^0.2.1",
    "react-native-sentry": "^0.32.0",
    "react-native-simple-toast": "0.0.7",
    "react-native-sound": "^0.10.4",
    "react-native-vector-icons": "^4.4.3",
    "react-navigation": "1.0.0-beta.23",
    "react-redux": "^5.0.6",
    "react-test-renderer": "16.0.0",
    "redux": "^3.7.2",
    "redux-action-buffer": "^1.2.0",
    "redux-batched-actions": "^0.1.6",
    "redux-logger": "^3.0.1",
    "redux-persist": "^4.10.2",
    "redux-thunk": "^2.1.0",
    "reselect": "^3.0.1",
    "stream": "^0.0.2",
    "string.fromcodepoint": "^0.2.1",
    "url-parse": "^1.2.0",
    "zulip-markdown-parser": "^1.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^22.0.4",
    "babel-plugin-transform-remove-console": "^6.8.4",
    "babel-preset-react-native": "^4.0.0",
    "coveralls": "^3.0.0",
    "deep-freeze": "^0.0.1",
    "detox": "^6.0.4",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "7.5.1",
    "eslint-plugin-react-native": "^3.2.0",
    "eslint-plugin-spellcheck": "0.0.6",
    "flow-bin": "^0.57.3",
    "flow-typed": "^2.2.3",
    "jest": "^22.0.4",
    "jest-cli": "^22.0.4",
    "jest-react-native": "^18.0.0",
    "prettier": "^1.9.2",
    "react-native-cli": "^2.0.1",
    "reactotron-react-native": "^1.14.0",
    "reactotron-redux": "^1.13.0",
    "redux-mock-store": "^1.4.0"
  },
  "jest": {
    "preset": "react-native",
    "setupTestFrameworkScriptFile": "./jest/jestSetup.js",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|@expo/react-native-action-sheet|react-navigation)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/__e2e__tests__"
    ],
    "setupFiles": [
      "./jest/globalFetch.js"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/ZulipMobile.app",
        "build": "cd ios && xcodebuild -workspace ZulipMobile.xcworkspace -configuration Release -scheme ZulipMobile -derivedDataPath build -sdk iphonesimulator -quiet",
        "type": "ios.simulator",
        "name": "iPhone 6, iOS 10.3"
      }
    },
    "specs": "__e2e__tests__"
  }
}
